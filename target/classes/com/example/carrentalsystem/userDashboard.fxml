                <Button onAction="#handleFeedback" styleClass="nav-button" text="ðŸ“ Feedback" />
                <Button onAction="#handleMyBookings" styleClass="nav-button" text="ðŸ“… My Bookings" />
                <Region VBox.vgrow="ALWAYS" />
