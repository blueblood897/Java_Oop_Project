<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>

<VBox alignment="CENTER" prefHeight="565.0" prefWidth="578.0" spacing="15" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalsystem.ReceiptViewController">
    <!-- Title Section -->
    <Text fx:id="receiptTitle" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-alignment: center;" text="Rental Receipt" />



    <!-- Receipt Display -->
    <TextArea fx:id="receiptTextArea" style="-fx-font-size: 14px;" prefHeight="600" prefWidth="400" wrapText="true" editable="false" />

    <!-- Total Cost Section -->
    <Separator maxWidth="500" />
    <Text fx:id="totalCostText" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Total Cost: $" />
    <Separator maxWidth="500" />

    <!-- Thank You Message -->
    <Text fx:id="thankYouText" style="-fx-font-size: 14px; -fx-font-style: italic;" text="Thank you for your rental!" />


    <Button fx:id="backButton" onAction="#handleBackButton" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px;" text="Back" />

    <!-- Download Button -->
    <Button fx:id="downloadButton" onAction="#handleDownloadReceipt" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px;" text="Download Receipt" />
</VBox>
